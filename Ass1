#include<stdio.h>
void main()
{
   int i,j,k,l,n;
   scanf("%d",&n);
   for(i=1;i<=n;i++)
   {
       for(j=1;j<=i;j++)
       {
           printf("%d",j);
       }
       printf("\n");
   }
   for(k=n-1;k>=1;k--)
   {
       for(l=1;l<=k;l++)  
       {
           printf("%d",l);
       }
       printf("\n");
   }
}
